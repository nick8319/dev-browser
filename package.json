{
  "name": "browser-skill",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "dev-browser/*"
  ],
  "overrides": {
    "dev-browser": "workspace:packages/dev-browser"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md,yml,yaml}": "prettier --write"
  }
}
